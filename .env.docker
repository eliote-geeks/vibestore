APP_NAME="VibeStore"
APP_ENV=production
APP_KEY=base64:hNVzElN6L6443ry5pLJcFG5p8cr4B1UI+BPM99kOYPs=
APP_DEBUG=false
APP_URL=https://vibestordistr.com

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
PHP_CLI_SERVER_WORKERS=4
BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=warning

# Configuration Docker pour PostgreSQL
DB_CONNECTION=pgsql
DB_HOST=db
DB_PORT=5432
DB_DATABASE=vibestore_db
DB_USERNAME=vibestore_user
DB_PASSWORD=vibestore_secure_password

# Configuration Docker pour Redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=.vibestordistr.com
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=lax

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis

CACHE_STORE=redis
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Configuration mail pour Docker
MAIL_MAILER=smtp
MAIL_SCHEME=null
MAIL_HOST=smtp.hostinger.com
MAIL_PORT=587
MAIL_USERNAME=noreply@vibestordistr.com
MAIL_PASSWORD=VOTRE_MOT_DE_PASSE_EMAIL
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@vibestordistr.com"
MAIL_FROM_NAME="${APP_NAME}"

# Configuration AWS (optionnel)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Configuration Vite pour Docker
VITE_APP_NAME="${APP_NAME}"
VITE_APP_URL="${APP_URL}"

# Configuration WebSocket pour Docker
WEBSOCKET_HOST=websocket
WEBSOCKET_PORT=8080

# Configuration Pusher (optionnel pour broadcasting)
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

# Configuration VibeStore spécifique
FILESYSTEM_DISK=public
UPLOAD_MAX_SIZE=500000000
MAX_AUDIO_SIZE=100000000
MAX_VIDEO_SIZE=300000000

VIBESTORE_MAX_UPLOADS_PER_USER=50
VIBESTORE_ALLOW_GUEST_DOWNLOADS=false
VIBESTORE_ENABLE_STATISTICS=true
VIBESTORE_CLEANUP_TEMP_FILES=true

# Configuration streaming et médias
FFMPEG_PATH=/usr/bin/ffmpeg
FFPROBE_PATH=/usr/bin/ffprobe

# Healthcheck pour Docker
HEALTHCHECK_URL=http://localhost/health